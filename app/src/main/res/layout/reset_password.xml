<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.ResetPassword">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">




        <androidx.appcompat.widget.Toolbar
            android:id="@+id/forgetPasswordToolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#fff">

            <TextView

                android:id="@+id/toolbar_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="sans-serif-medium"
                android:text="Reset Password"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/resetEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="#999"
        android:layout_marginTop="24dp"
        android:paddingStart="16dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:textColor="#121212"
        android:imeOptions="actionDone"
        android:layout_marginHorizontal="16dp"
        android:hint="Enter your registered email"
        android:background="@drawable/text_view_bg"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <Button
        android:id="@+id/reset_submit_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit email"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="32dp"
        android:textColor="@color/blue"
        android:background="@drawable/login_butt_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetEmail"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>